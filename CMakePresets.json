{
    "version": 3,
    "configurePresets": [
        {
            "name": "base-windows",
            "hidden": true,
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/",
            "installDir": "${sourceDir}",
            "toolchainFile": "D:\\tooling\\toolchains\\llvm-win.cmake",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "Windows_AMD64_Debug",
            "displayName": "Windows AMD64 Debug",
            "inherits": "base-windows",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "Windows_AMD64_Release",
            "displayName": "Windows AMD64 Release",
            "inherits": "base-windows",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "base-build",
            "hidden": true,
            "jobs": 0
        },
        {
            "name": "Windows_AMD64_Debug",
            "configurePreset": "Windows_AMD64_Debug",
            "inherits": "base-build"
        },
        {
            "name": "Windows_AMD64_Release",
            "configurePreset": "Windows_AMD64_Release",
            "inherits": "base-build"
        }
    ]
}
